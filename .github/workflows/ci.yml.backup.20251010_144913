name: ci 
on:
  push:
    branches:
      - master 
      - main
    # é¿å…å›  AI ç¼“å­˜æäº¤è§¦å‘æ— é™å¾ªç¯
    paths-ignore:
      - '.ai_cache/**'
  # ç§»é™¤ pull_request è§¦å‘ï¼Œå‡å°‘ä¸å¿…è¦çš„æ„å»º
permissions:
  contents: write
jobs:
  deploy:
    runs-on: ubuntu-latest
    # è®¾ç½®æ€»ä½“è¶…æ—¶æ—¶é—´ï¼ˆ15åˆ†é’Ÿï¼Œé€‚åˆä¸­ç­‰è§„æ¨¡é¡¹ç›®ï¼‰
    timeout-minutes: 15
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
          # ç§»é™¤ sparse-checkoutï¼Œç¡®ä¿æ‰€æœ‰æ–‡ä»¶éƒ½è¢«æ£€å‡º
      - uses: actions/setup-python@v5  # æ›´æ–°åˆ°æœ€æ–°ç‰ˆæœ¬
        with:
          python-version: '3.11'  # ä½¿ç”¨å…·ä½“ç‰ˆæœ¬å·
      
      - name: Set cache ID
        run: echo "cache_id=$(date --utc '+%V')" >> $GITHUB_ENV 
      
      - uses: actions/cache@v4  # æ›´æ–°åˆ°æœ€æ–°ç‰ˆæœ¬
        with:
          key: mkdocs-material-${{ github.run_number }}
          path: |
            .cache
            ~/.cache/pip
          restore-keys: |
            mkdocs-material-
      
      # ä½¿ç”¨ requirements.txt å®‰è£…ä¾èµ–ï¼ˆæ›´é«˜æ•ˆï¼‰
      - name: Install dependencies
        timeout-minutes: 5  # ä¾èµ–å®‰è£…é€šå¸¸2-3åˆ†é’Ÿè¶³å¤Ÿ
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt
      
      # é¢„æ„å»ºæµ‹è¯•ï¼Œå¿«é€Ÿå¤±è´¥
      - name: Test build (without AI)
        timeout-minutes: 3  # æµ‹è¯•æ„å»ºåº”è¯¥å¾ˆå¿«
        run: |
          # ä¸´æ—¶ç¦ç”¨ AI æ‘˜è¦è¿›è¡Œå¿«é€Ÿæµ‹è¯•æ„å»º
          export AI_SUMMARY_CI_ENABLED=false
          mkdocs build --strict
      
      - name: Deploy (AI Summary Disabled)
        timeout-minutes: 8  # éƒ¨ç½²æ­¥éª¤ï¼ŒåŒ…å«æ„å»ºå’Œæ¨é€
        # env:
        #   # AIæ‘˜è¦å¼€å…³æ§åˆ¶
        #   AI_SUMMARY_CI_ENABLED: 'true'           
        #   AI_SUMMARY_CI_ONLY_CACHE: 'true'        # ä¼˜å…ˆä½¿ç”¨ç¼“å­˜ï¼Œå‡å°‘ API è°ƒç”¨
        #   AI_SUMMARY_CI_FALLBACK: 'true'          
        #   AI_SUMMARY_CACHE_ENABLED: 'true'        
        #   AI_SUMMARY_CACHE_EXPIRE_DAYS: '30'      
        #   AI_SUMMARY_CACHE_AUTO_CLEAN: 'true'     
        #   # APIå¯†é’¥é…ç½®
        #   GLM_API_KEY: ${{ secrets.GLM_API_KEY }}
        #   OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          # ä½¿ç”¨ timeout å‘½ä»¤ä½œä¸ºé¢å¤–ä¿æŠ¤ï¼ˆ6åˆ†é’Ÿï¼‰
          timeout 360 mkdocs gh-deploy --force || {
            echo "âŒ éƒ¨ç½²è¶…æ—¶æˆ–å¤±è´¥"
            exit 1
          }
      
